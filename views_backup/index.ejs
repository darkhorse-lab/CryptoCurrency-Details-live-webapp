            <div class="alert alert-danger"><%= error %> </div>
          <% } %>

        </div>
      </div>
      <!-- == Error Messages End == -->

 <!-- == Main body starts here == -->

  <center><h3>Top 20 Cryptocurrencies by Market Capitalization</h3></center>

  <table class="table table-hover table-dark" style="margin-top: 20px;">
    <thead>
      <tr>
        <th scope="col"><a href=""> # </a></th>
        <th scope="col"><a href=""> Name </a></th>
        <th scope="col"><a href=""> Market Capacity </a></th>
        <th scope="col"><a href=""> Price </a></th>
        <th scope="col"><a href=""> Prediction </a></th>
        <th scope="col"><a href=""> Price Graph </a></th>
      </tr>
    </thead>

    <tbody>

      <% var i; var count=1; var img_no=0; %>

<% for (var key in coinlist) { %>
      <%i= coinlist[key] %>
      <% img_no = img_no % 5; %>
      <%
        var marketcap,nStr,price_value;
        nStr = prices[i]['USD']['MKTCAP'];
        price_value = prices[i]['USD']['PRICE'];
        nStr += '';
        price_value += '';

        var x,y;

        x = nStr.split('.');
        y = price_value.split('.');

        var x1,y1;

        x1 = x[0];
        y1 = y[0];

        var x2,y2;

        x2 = x.length > 1 ? '.' + x[1] : '';
        y2 = y.length > 1 ? '.' + y[1] : '';

        var rgx = /(\d+)(\d{3})/;
        while (rgx.test(x1)) {
         x1 = x1.replace(rgx, '$1' + ',' + '$2');
        }

        rgx = /(\d+)(\d{3})/;
        while (rgx.test(y1)) {
         y1 = y1.replace(rgx, '$1' + ',' + '$2');
        }

        marketcap =  x1 + x2;
        price_value = y1 + y2;

      %>

      <tr>
        <th scope="row"><%= count %></th>
        <td><%= coinnames[count-1] %></td>
        <td>$<%= marketcap %></td>
        <td>$<%= price_value %></td>
        <td>--</td>
        <td><a href="/users/chartshow/<%= coinlist[count-1] %>"><img src="/img/fig<%=img_no%>.png" style="border: 2px solid green;"></a></td>
      </tr>

      <% count = count+1; img_no = img_no+1;%>
      <% if(count == 21){ break;} %>

<% } %>

    </tbody>
  </table>




      <footer class="footer">
            <center>&copy; CryptoPriceSite CSE SUST.</center>
      </footer>

    </div>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <!--HighChart JS file-->
    <script src="https://code.highcharts.com/highcharts.js"></script>


</body>
</html>
