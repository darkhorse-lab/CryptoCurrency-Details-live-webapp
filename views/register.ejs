<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!--<meta name="viewport" content="width=device-width, initial-scale=1.0">-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="/img/bitcoin_jpg.jpg">

    <title>CryptoPriceSite</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container-fluid">
     <!-- == Navigation Bar Start == -->
      <div class="header clearfix">
          <nav class="navbar navbar-expand-md navbar-light fixed-top md-light" style="background-color: #e3f2fd;">
              <a class="navbar-brand" href="/users/home">CryptoPriceSite</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                          <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                  </ul>
                  <div class="form-inline my-2 my-lg-0">
                      <ul class="navbar-nav mr-auto">
                              <li class="nav-item"><a class="nav-link" href="/users/login">Login</a></li>
                              <li class="nav-item"><a class="nav-link" href="/users/register">Register</a></li>
                      </ul>
                  </div>
              </div>
          </nav>
          <div class="container" style="margin-top: 50px;">
            <center><img src="/img/bitcoin.gif"></center>
          </div>

      </div>
      <!-- == Navigation Bar End == -->


      <!-- == Error Messages == -->
      <div class="container">
        <div class="col-lg-12">
          <% if(success_msg.length > 0){ %>
            <div class="alert alert-success"><%= success_msg %> </div>
          <% } %>

          <% if(error_msg.length > 0){ %>
            <div class="alert alert-danger"><%= error_msg %> </div>
          <% } %>

          <% if(error.length > 0){ %>
            <div class="alert alert-danger"><%= error %> </div>
          <% } %>

        </div>
      </div>
      <!-- == Error Messages End == -->

 <!-- == Main body starts here == -->

<div class="container">

<h3 class="page-header">Register</h3>

<% if(ERRORS.length > 0){ %>
    <% for(var i=0; i < ERRORS.length; i++) { %>
        <div class="alert alert-danger"><%= ERRORS[i] %></div>
    <% } %>
<% } %>

<form method="post" action="/users/register">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" placeholder="Enter Username">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Enter Email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Enter Password">
   </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" name="password2" placeholder="Enter Confirm Password">
   </div>
   <button type="submit" class="btn btn-primary">Register</button>
</form>

</div>

      <footer class="footer">
            <center>&copy; CryptoPriceSite CSE SUST.</center>
      </footer>

    </div>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <!--HighChart JS file-->
    <script src="https://code.highcharts.com/highcharts.js"></script>


</body>
</html>
