</head>
<body>

<div class="container-fluid">
     <!-- == Navigation Bar Start == -->
      <div class="header clearfix">
          <nav class="navbar navbar-expand-md navbar-light fixed-top md-light" style="background-color: #e3f2fd;">
              <a class="navbar-brand" href="/users/home">CryptoPriceSite</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                          <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                  </ul>
                  <div class="form-inline my-2 my-lg-0">
                      <ul class="navbar-nav mr-auto">
                          <% if(username > 0){ %>
                              <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
                              <li class="nav-item"><a class="nav-link" href="/users/logout">Logout</a></li>
                              <% } %>

                              <li class="nav-item"><a class="nav-link" href="/users/login">Login</a></li>
                              <li class="nav-item"><a class="nav-link" href="/users/register">Register</a></li>

                      </ul>
                  </div>
              </div>
          </nav>
          <div class="container" style="margin-top: 50px;">
            <center><img src="/img/bitcoin.gif"></center>
          </div>

      </div>
      <!-- == Navigation Bar End == -->


      <!-- == Error Messages == -->
      <div class="container">
        <div class="col-lg-12">
          <% if(success_msg.length > 0){ %>
            <div class="alert alert-success"><%= success_msg %> </div>
          <% } %>

          <% if(error_msg.length > 0){ %>
            <div class="alert alert-danger"><%= error_msg %> </div>
          <% } %>

          <% if(error.length > 0){ %>
            <div class="alert alert-danger"><%= error %> </div>
          <% } %>

        </div>
      </div>
      <!-- == Error Messages End == -->

 <!-- == Main body starts here == -->

